<div class="col-md-8 col-md-offset-4">
  <div class="panel panel-default">
    <div class="panel-heading">
    
<h2>Sign up</h2>
<%= nested_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>



   <div class="field">
 <%= f.label :Name %><br/>
    <div class="form-group">
        <%= f.text_field :name, placeholder: "Name", class: "form-control input-lg", label: false, :required =>true %>
    </div>
<div class="field">
 <%= f.label :Email %><br/>
    <div class="form-group">
        <%= f.email_field :email, placeholder: "Email", class: "form-control input-lg", label: false, :required =>true %>
    </div>
 
<div class="field">
 <%= f.label :password %><br/>
    <div class="form-group">
    <% if @minimum_password_length %>
 
    <% end %>
        <%= f.password_field :password, placeholder: "Password", class: "form-control input-lg", label: false ,:required =>true, autocomplete: "off" %>
    </div>
 
<div class="field">
 <%= f.label :Password_confirmation  %><br/>
    <div class="form-group">
        <%= f.password_field :password_confirmation, placeholder: "Password_confirmation", class: "form-control input-lg", label: false, :required =>true, autocomplete: "off" %>
    </div>
 






  <div class="actions">
    <%= f.submit "Create an account",class: "btn btn-success"%>
  </div>

<% end %></div></div></ul></div></div></div></div></div></div></div></div></div></div>


