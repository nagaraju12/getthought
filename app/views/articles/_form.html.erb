<div class="col-md-8 col-md-offset-3">
  <div class="panel panel-default">
    <div class="panel-heading">
<%= nested_form_for @article, html: { multipart: true } do |f| %>
  <div>
    <%= f.label :Title %>
  </div>
 <div class="form-group">
        <%= f.text_field :name, placeholder: "Title", class: "form-control input-lg", label: false, :required =>true %>
    </div>
    <% if !@article.new_record? %>
<br><% @article.images.each do |i| %>
<%= image_tag(i.image.url, :height => 50, :width =>80 ) %>
<% end %>
<% end %>
  <div class='field'>
<%= f.fields_for :images do |image| %>
  <td><%= image.file_field :image %></td>
  <p><%= image.link_to_remove "Remove image" %></p>
<% end %>
<p><%= f.link_to_add "Add a image", :images %></p>
</div>
  <div>
   <%= f.label :email %>
   </div>
 <div class="form-group">
        <%= f.email_field :email, placeholder: "example@gmail.com", class: "form-control input-lg", label: false,  :required =>true %>
    </div>
  <div>
    <%= f.label :body %>
  </div>
  <div>
   <%#= f.cktext_area :body, :class => 'ckeditor', rows: 10%>
    <%= f.text_area :body, :class => 'ckeditor', rows: 10%>
  </div>
  
  <div>
    <%= f.submit %>
  </div>
<% end %></div></div></div>